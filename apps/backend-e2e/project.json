{
  "name": "backend-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["backend"],
  "projectType": "application",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/backend-e2e/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "command": "NODE_ENV=test jest --config apps/backend-e2e/jest-e2e.config.ts"
      }
    },
    "test:e2e:docker": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{e2eProjectRoot}"],
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx dev backend"
          },
          {
            "command": "nx openapi:generate backend"
          },
          {
            "command": "nx test:e2e backend-e2e"
          }
        ]
      }
    }
  }
}
