{
  "arrowParens": "always",
  "useTabs": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 70,
  "quoteProps": "consistent",
  "tabWidth": 2,
  "trailingComma": "all",
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": "*.md",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
